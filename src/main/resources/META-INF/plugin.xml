<idea-plugin>
    <id>org.jetbrains.research.java-types-migration</id>
    <name>Data-Driven Type Migration</name>
    <vendor>JetBrains Research</vendor>

    <description><![CDATA[
    A data-driven plugin for intelligent type migration in Java.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <postStartupActivity implementation="org.jetbrains.research.ide.services.TypeMigrationStartupActivity"/>

        <!--        <intentionAction>-->
        <!--            <className>org.jetbrains.research.ide.intentions.DataDrivenTypeMigrationIntention</className>-->
        <!--            <category>Type migration</category>-->
        <!--        </intentionAction>-->

        <projectService serviceInterface="org.jetbrains.research.ide.services.TypeMigrationRefactoringProvider"
                        serviceImplementation="org.jetbrains.research.ide.services.TypeMigrationRefactoringProviderImpl"/>

        <postStartupActivity
                implementation="org.jetbrains.research.ide.services.TypeMigrationRefactoringProviderImpl$Startup"/>

        <!--suppress PluginXmlValidity -->
        <intentionMenuContributor
                implementation="org.jetbrains.research.ide.intentions.TypeMigrationIntentionContributor"/>


    </extensions>

</idea-plugin>