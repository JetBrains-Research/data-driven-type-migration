<idea-plugin>
    <id>org.jetbrains.research.java-types-migration</id>
    <name>Data-Driven Type Migration</name>
    <vendor>JetBrains Research</vendor>

    <description><![CDATA[
    A data-driven plugin for intelligent type migration in Java.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">

        <intentionAction>
            <className>org.jetbrains.research.ide.intentions.ProactiveTypeChangeIntention</className>
            <category>Type migration</category>
        </intentionAction>

        <projectService serviceInterface="org.jetbrains.research.ide.refactoring.services.TypeChangeRefactoringProvider"
                        serviceImplementation="org.jetbrains.research.ide.refactoring.services.TypeChangeRefactoringProviderImpl"/>

        <postStartupActivity
                implementation="org.jetbrains.research.ide.refactoring.services.TypeChangeRefactoringProviderImpl$Startup"/>

        <!--suppress PluginXmlValidity -->
        <intentionMenuContributor
                implementation="org.jetbrains.research.ide.refactoring.services.TypeChangeIntentionContributor"/>

    </extensions>

</idea-plugin>